@model MyELearningProject.DAL.Entites.Course
@{
    ViewBag.Title = "CreateCourse";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Yeni Kurs Girişi</h2>

<form method="post">
    <label>Kurs Adını Giriniz</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />  <br />
    <label>Kurs Fiyatını Giriniz</label>
    @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
    <br />  <br />
    <label>Kurs Süresini Giriniz</label>
    @Html.TextBoxFor(x => x.Duration, new { @class = "form-control" })
    <br />  <br />
    <label>Kurs Görselini Giriniz</label>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    <br />  <br />
    <label>Kategoriyi Giriniz</label>
    @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
    <br />  <br />
    <label>Eğitmeni Giriniz</label>
    @Html.DropDownListFor(x => x.InstructorId, (List<SelectListItem>)ViewBag.v2, new { @class = "form-control" })
    <br />  <br />
    <button class="btn btn-primary">Kategoriyi Kaydet</button>
</form>

