@model List<MyELearningProject.DAL.Entites.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-block">
                Kategori Listesi
                <br />
                @if (Model.Count == 0)
                {
                    <div class="alert alert-danger" role="alert">
                        Hiçbir Veri Bulunamadı
                    </div>
                }
                else
                {
                    <table class="table table-bordered">
                        <tr>
                            <th>#</th>
                            <th>Kategori Adı</th>
                            <th>Görel Yolu</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.CategoryId</td>
                                <td>@item.CategoryName</td>
                                <td>@item.ImageUrl</td>
                                <td><a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-outline-success">Güncelle</a></td>
                                <td></td>
                            </tr>
                        }
                    </table>
                }

                <a href="/Category/AddCategory" class="btn btn-outline-primary">Yeni Kategori Girişi</a>
            </div>
        </div>
    </div>
</div>

