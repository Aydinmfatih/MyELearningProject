@model MyELearningProject.DAL.Entites.About
@{
    ViewBag.Title = "AddAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Yeni Hakkımızda Girişi</h2>

<form method="post">
    <label>Hakkımızda Başlığını Giriniz</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />  <br />
    <label>Hakkımıza Alt Başlığını Giriniz</label>
    @Html.TextBoxFor(x => x.ContentTitle, new { @class = "form-control" })
    <br />  <br />
    <label>Hakkımızda Açıklamasını Giriniz</label>
    @Html.TextAreaFor(x => x.Description, new { @class = "form-control", @rows = 5 })
    <br />  <br />
    <button class="btn btn-primary">Kategoriyi Kaydet</button>
</form>