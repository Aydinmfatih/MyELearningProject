@model List<MyELearningProject.DAL.Entites.About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Hakkımızda</h2>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-block">
                Hakkımızda Listesi
                <br />
                @if (Model.Count == 0)
                {
                    <div class="alert alert-danger" role="alert">
                        Hiçbir Veri Bulunamadı
                    </div>
                }
                else
                {
                    <table class="table table-bordered">
                        <tr>
                            <th>#</th>
                            <th>Hakkımızda Başlığı</th>
                            <th>Hakkımzıda Alt Başlığı</th>
                            <th>Hakkımızda Açıklaması</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.AboutId</td>
                                <td>@item.Title</td>
                                <td>@item.ContentTitle</td>
                                <td>@item.Description</td>
                                <td><a href="/About/DeleteAbout/@item.AboutId" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/About/UpdateAbout/@item.AboutId" class="btn btn-outline-success">Güncelle</a></td>
                            </tr>
                        }
                    </table>
                }

                <a href="/About/AddAbout" class="btn btn-outline-primary">Yeni Hakkımızda Girişi</a>
            </div>
        </div>
    </div>
</div>
