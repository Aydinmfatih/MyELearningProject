@model List<MyELearningProject.DAL.Entites.Testimonial>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Referans Listesi</h2>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-block">
                Referans Listesi
                <br />
                @if (Model.Count == 0)
                {
                    <div class="alert alert-danger" role="alert">
                        Hiçbir Veri Bulunamadı
                    </div>
                }
                else
                {
                    <table class="table table-bordered">
                        <tr>
                            <th>#</th>
                            <th>Referans Adı Soyadı</th>
                            <th>Referans Başlığı </th>
                            <th>Referans Görseli</th>
                            <th>Referans Yorumu</th>
                            <th>Referans Statüsü</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                        @foreach (var item in Model)
                        {

                            <tr>

                                <td>@item.TestimonialId</td>
                                <td>@item.NameSurname</td>
                                <td>@item.Title</td>
                                <td><img src="@item.ImageUrl" style="height:50px;width:60px;border-radius:50%" /></td>
                                <td>@item.Comment</td>
                                <td>@item.Status</td>
                                <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-outline-success">Güncelle</a></td>
                            </tr>
                        }
                    </table>
                }

                <a href="/Testimonial/AddTestimonial" class="btn btn-outline-primary">Yeni Referans Girişi</a>
            </div>
        </div>
    </div>
</div>