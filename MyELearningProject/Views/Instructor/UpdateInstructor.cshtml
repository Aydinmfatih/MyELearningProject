@model MyELearningProject.DAL.Entites.Instructor
@{
    ViewBag.Title = "UpdateInstructor";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Eğitmen Güncelleme Sayfası</h3>

<form method="post">
    <br />
    <input type="hidden" value="@Model.InstructorId" name="InstructorId" />
    <label>Eğitmen Adı</label>
    <input type="text"  value="@Model.Name" name="Name" class="form-control" />
    <br /> <br />
    <label>Eğitmen Soyadı</label>
    <input type="text"  value="@Model.Surname"name="Surname" class="form-control" />
    <br /> <br />
    <label>Eğitmen Görseli</label>
    <input type="text"  value="@Model.ImageUrl" name="ImageUrl" class="form-control" />
    <br /> <br />
    <button class="btn btn-primary">Eğitmeni Güncelle</button>
</form>