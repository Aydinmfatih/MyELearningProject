@model List<MyELearningProject.DAL.Entites.Contact>
@{
    ViewBag.Title = "AdminContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Gelen Mesajlar</h1>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-block">
                Hakkımızda  Listesi
                <br />
                @if (Model.Count == 0)
                {
                    <div class="alert alert-danger" role="alert">
                        Hiçbir Veri Bulunamadı
                    </div>
                }
                else
                {
                    <table class="table table-bordered">
                        <tr>
                            <th>#</th>
                            <th>İsim Soyisim</th>
                            <th>Mail Adresi</th>
                            <th>Mesaj</th>
                            <th>Sil</th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ContactId</td>
                                <td>@item.NameSurname</td>
                                <td>@item.Email</td>
                                <td>@item.Message</td>
                                <td><a href="/Contact/DeleteContact/@item.ContactId" class="btn btn-outline-danger">Sil</a></td>
                            </tr>
                        }
                    </table>
                }
            </div>
        </div>
    </div>
</div>


